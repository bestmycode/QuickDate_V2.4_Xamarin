<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/main"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="?attr/colorFill"
                android:clickable="false"
                android:focusable="false"
                android:orientation="vertical"
                android:padding="@dimen/padding_list_row">
    <RelativeLayout
      android:id="@+id/icon_container"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="5dp"
      android:orientation="vertical">
      <RelativeLayout
        android:id="@+id/lyt_checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
          android:layout_width="55dp"
          android:layout_height="55dp"
          android:src="@xml/shape_circle"
          android:tint="#546E7A" />
        <ImageView
          android:layout_width="25dp"
          android:layout_height="25dp"
          android:layout_centerInParent="true"
          app:srcCompat="@xml/ic_done" />
      </RelativeLayout>
      <RelativeLayout
        android:id="@+id/lyt_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
          android:id="@+id/ImageAvatar"
          android:scaleType="centerCrop"
          android:layout_width="55dp"
          android:layout_height="55dp"
          android:focusable="false"
          android:clickable="false"
          android:src="@drawable/no_profile_image_circle"  />  
      </RelativeLayout>
    </RelativeLayout> 
        <TextView
            android:id="@+id/Txt_Username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:maxWidth="220dp"
            android:text=""
            android:drawablePadding="4dp"
            android:layout_marginStart="10dp"
            android:textSize="@dimen/msg_text_primary"
            android:textStyle="bold"
            android:clickable="false"
            android:paddingEnd="10dp"
            android:focusable="false"
            android:layout_toEndOf="@+id/icon_container"
            android:gravity="start"
            android:textAlignment="textStart" />
        <TextView
          android:id="@+id/LastMessages_icon"
          android:layout_toEndOf="@+id/icon_container"
          android:layout_below="@+id/Txt_Username"
          android:text="I"
          android:layout_height="wrap_content" 
          android:textSize="@dimen/msg_text_secondary"
          android:layout_width="wrap_content"
          android:layout_marginTop="4.5dp"
          android:layout_marginStart="10dp"/>
        <TextView
            android:id="@+id/Txt_LastMessages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:layout_toEndOf="@+id/LastMessages_icon"
            android:layout_below="@+id/Txt_Username"
            android:textColor="@color/text_color_in_between"
            android:textSize="@dimen/msg_text_secondary"
            android:layout_marginTop="4.5dp"
            android:layout_marginStart="5dp"
            android:focusable="false"
            android:paddingEnd="10dp"
            android:clickable="false"
            android:gravity="start"
            android:textAlignment="textStart" />
        <TextView
            android:id="@+id/Txt_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textColor="@color/text_color_in_between"
            android:textSize="12dp"
            android:textStyle="normal"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="5dp"
            android:focusable="false"
            android:clickable="false" /> 
        <ImageView
          android:layout_width="18dp"
          android:layout_height="18dp"
          android:id="@+id/IconCheckRead"
          android:layout_below="@+id/Txt_timestamp"
          android:layout_alignParentEnd="true"
          android:layout_centerVertical="true" 
          android:foregroundGravity="center_horizontal"
          android:gravity="center" 
          android:src="@drawable/ic_tick_vector"
          android:tint="@color/accent"  
          android:layout_marginTop="10dp"
          android:layout_marginEnd="7dp" 
          android:visibility="gone"
          android:clickable="false"
          android:focusable="false" />  
       
        <View
            android:id="@+id/line"
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="?attr/colorDivider"
            android:gravity="bottom"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="65dp"
            android:layout_alignParentBottom="true"
            android:layout_alignBottom="@id/main" />
    </RelativeLayout>